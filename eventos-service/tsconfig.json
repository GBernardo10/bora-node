{
  "compilerOptions": {
    "lib": ["es5", "es6", "es7", "dom"],
    "target": "ES2017",
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "allowJs": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "declarationMap": true,
    "inlineSources": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "@controllers/*": ["./src/controllers/*"]
    }
  }
}
